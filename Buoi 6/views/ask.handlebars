<div class="container">
    <h1>Hãy hỏi cộng động một câu hỏi đúng/sai hoặc có/không?</h1>
    <form action="/api/question" method="POST">
        <textarea class="form-control" name="question" id="question" rows="10" maxlength="200"></textarea>
        <div>
            <p id="limit">Còn
                <span id="remainCharacter">200</span>/200 kí tự</p>
            <button class="btn btn-primary">Gửi</button>
        </div>
    </form>
</div>

<script>
    const current = document.getElementById('ask');
    current.classList.add('active');
    const textarea = document.getElementById('question');
    textarea.addEventListener('input', () => {
        const rest = 200 - textarea.value.length;
        document.getElementById('remainCharacter').innerHTML = rest;
    })
</script>